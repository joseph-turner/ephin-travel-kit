{
  "extends": "@ephin-travel-kit/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*", "./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "eslint.config.js",
    "next-env.d.ts",
    "next.config.ts",
    "postcss.config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
